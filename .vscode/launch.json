    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "rows",
                "10",
                "columns",
                "10",
                "file-path",
                "new"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File with UserName arg",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": [
                "${env:USERNAME}"
            ],
            "console": "integratedTerminal"
        }
    ]
}